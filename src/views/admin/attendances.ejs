<div class="container">
    <%- include('../partials/sidenav/admin') %>
    <div class="container__main">
        <%- include('../partials/header/admin') %>

        <div class="container__main__title">
            <h1>Attendance trackers</h1>
            <p>View trackers teachers use to keep track of attendance</p>
        </div>
        <div class="container__main__focus">
            <div class="reports" style="margin-bottom: 2rem;">
                <p id="download-csv">Download CSV Report</p>
            </div>
            <div class="card table">
                <div class="table__header">
                    <ul class="table__header__row flex">
                        <li class="table__header__row__item">#</li>
                        <li class="table__header__row__item">Lecturer first name</li>
                        <li class="table__header__row__item">Lecturer last name</li>
                        <li class="table__header__row__item">Module</li>
                        <li class="table__header__row__item">Starts</li>
                        <li class="table__header__row__item">Ends</li>
                    </ul>
                </div>
                <div class="table__body" id="tracker-list">
                    <ul class="table__body__row"></ul>
                </div>
                <div class="card__body empty flex flex--a-center flex--j-center" id="no-trackers"
                    style="display: none;">
                    <img src="/assets/illustrations/no-data.svg" alt="No data">
                    <div class="empty_caption">
                        <h1>Trackers not found</h1>
                        <p>There aren't any Trackers at the moment.</p>
                        <p>Trackers will appear here when available.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<a download id="download-anchor"></a>

<script src="/assets/js/dist/jquery.js"></script>

<script type="module">
    import AttendanceTracker from "/assets/js/src/auth/AttendanceTracker.js"

    (async () => {
        await AttendanceTracker.get_for_admin();
    })()

    $('#download-csv').on('click', e => {
        AttendanceTracker.downloadCSV();
    })
</script>