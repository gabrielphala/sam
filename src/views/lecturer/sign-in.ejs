<div class="login">
    <div class="login__main">
        <div class="login__main__logo flex flex--a-center">
            <img src="/assets/illustrations/lines.svg" alt="logo">
            <p>Student Attendance Monitor</p>
        </div>
        <div class="login__main__form flex">
            <form id="sign-in-form" class="login__main__form__details">
                <div class="login__main__form__details__header">
                    <h1>Sign in</h1>
                    <p>Lecturer</p>
                </div>
                <div class="login__main__form__details__body">
                    <p id="sign-in-error" class="hide" style="margin-bottom: 1rem; color: darkred;">Error: something went wrong</p>

                    <div class="input">
                        <input type="number" id="staff-no" placeholder="Staff no">
                    </div>
                    <div class="input">
                        <input type="password" id="password" placeholder="Password">
                    </div>
                    <button class="btn btn--primary">Sign in</button>
                </div>
                <div class="login__main__form__details__footer flex flex--j-space-around">
                    <p><a href="">Terms of use</a></p>
                    <p><a href="">Privacy policy</a></p>
                </div>
            </form>
            <div class="login__main__form__illustration">
                <img  src="/assets/illustrations/lecturer.svg" alt="team">
            </div>
        </div>
    </div>
</div>

<script src="/assets/js/dist/jquery.js"></script>

<script type="module">
    import Lecturer from "/assets/js/src/auth/Lecturer.js"

    $('#sign-in-form').on('submit', e => {
        e.preventDefault();

        Lecturer.sign_in()
    });
</script>